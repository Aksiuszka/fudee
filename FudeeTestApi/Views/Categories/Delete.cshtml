@model FudeeTestApi.Models.Category

@{
    ViewData["Title"] = "Usuwanie";
}

<a asp-action="Index" class="fw-bolder purple"> < Powrót do listy</a>
<div class="header-box peach">
    <h2>Usuń kategorię</h2>
</div>

@{
    if (!String.IsNullOrEmpty(ViewBag.DeleteMessage))
    {
        <h5 class="alert alert-danger" role="alert"><i class="bi-info-circle"></i>&nbsp;@ViewBag.DeleteMessage</h5>
    }
    else
    {
        <h5 class="alert alert-danger" role="alert"><i class="bi-info-circle"></i>&nbsp;Czy napewno chcesz usunąć tę kategorię?</h5>

    }
}
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NameCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameCategory)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DescriptionCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescriptionCategory)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Icon)
        </dt>
        <dd class = "col-sm-10">
            <img class="img-fluid mt-3" src="~/CategoryIcon/@Model.Icon"><br />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Active)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Active)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Display)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Display)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        @{
            if (String.IsNullOrEmpty(ViewBag.DeleteMessage))
            {
                        <input type="hidden" asp-for="CategoryId" />
                        <input type="submit" value="Usuń" class="btn btn-danger" />

            }
        }
    </form>
</div>
