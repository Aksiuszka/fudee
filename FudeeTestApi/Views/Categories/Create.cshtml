@model FudeeTestApi.Models.Category

@{
    ViewData["Title"] = "Dodaj";
}

<a asp-action="Index" class="fw-bolder purple"> < Powrót do listy</a>
<div class="header-box orange">
    <h2>nowa kategoria</h2>
</div>
@{
    if (!String.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert alert-danger" role="alert">@ViewBag.ErrorMessage</div>
    }
}
<div class="card-form-container">
    <div class="col-md-10 interspace">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                 <div class="form-group fw-bolder mt-5 ">
                <label asp-for="NameCategory" class="control-label"></label>
                <input asp-for="NameCategory" class="form-control" />
                <span asp-validation-for="NameCategory" class="text-danger"></span>
            </div>
             <div class="form-group fw-bolder mt-5 ">
                <label asp-for="DescriptionCategory" class="control-label"></label>
                <textarea asp-for="DescriptionCategory" class="form-control"></textarea>
                <span asp-validation-for="DescriptionCategory" class="text-danger"></span>
            </div>
                 <div class="form-group fw-bolder mt-5 ">
                <label asp-for="Icon" class="control-label"></label>
                <input type="file" name="picture" id="picture" class="form-control" accept=".jpg,.gif,.png" />
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>
                 <div class="form-group fw-bolder mt-5 ">
                <input type="submit" value="+ Dodaj" class="btn purple-bg max-width-center mb-3" />

            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
}

